{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Activity{% endblock %}

{% block body %}
    <div class="ea-title">
        <h1>Our Activity</h1>
        <div class="ea-button ea-button_list">
            <a href="{{ path('activity_new') }}">New Activity</a>
        </div>
    </div>
    <div class="ea-list">
        {% for activ in activity %}
            <div class="ea-list_items">
                <div class="ea-list_name">{{ activ.name }}</div>
                <div class="ea-table">
                    <div class="ea-table__row">
                        <div class="ea-table__item">Kkal</div>
                        <div class="ea-table__item">Proteins</div>
                        <div class="ea-table__item">Fats</div>
                        <div class="ea-table__item">Carbohydrates</div>
                    </div>
                    <div class="ea-table__row">
                        <div class="ea-table__item">{{ activ.kkalPer5minutes }}</div>
                        <div class="ea-table__item">{{ activ.proteinsPer5minutes }}</div>
                        <div class="ea-table__item">{{ activ.fatsPer5minutes }}</div>
                        <div class="ea-table__item">{{ activ.carbohydratesPer5minutes }}</div>
                    </div>
                    <div class="ea-table__description">* - per 5 minutes</div>
                </div>
                <div class="ea-list_block">
                    <div class="ea-list_item">Rating</div>
                    <div class="ea-list_item">{{ activ.rating }}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
